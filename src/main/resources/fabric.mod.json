{
  "schemaVersion": 1,
  "id": "simpleauth",
  "version": "${version}",

  "name": "Simple Authentication Mod",
  "description": "A mod that tries to keep authentication for players simple via commands. (Fork by AqUpd)",
  "authors": [
    "samo_lego",
	"AqUpd"
  ],
  "contact": {
    "sources": "https://github.com/AquUpd/SimpleAuth"
  },

  "license": "MIT",
  "environment": "server",
  "entrypoints": {
    "server": [
      "org.samo_lego.simpleauth.SimpleAuth"
    ]
  },
  "mixins": [
    "mixins.simpleauth.json"
  ],

  "depends": {
    "fabricloader": ">=0.8.7",
    "fabric": "*"
  },
  "suggests": {
    "flamingo": "*"
  }
}
