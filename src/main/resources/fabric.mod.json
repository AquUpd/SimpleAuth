{
  "schemaVersion": 1,
  "id": "simpleauth",
  "version": "${version}",

  "name": "Simple Authentication Mod",
  "description": "A mod that tries to keep authentication for players simple via commands.",
  "authors": [
    "samo_lego"
  ],
  "contact": {
    "homepage": "samolego.github.io",
    "sources": "https://github.com/samolego/SimpleAuth"
  },

  "license": "MIT",

  "environment": "server",
  "entrypoints": {
    "server": [
      "org.samo_lego.simpleauth.SimpleAuth"
    ]
  },
  "mixins": [
    "mixins.simpleauth.json"
  ],

  "depends": {
    "fabricloader": ">=0.4.0",
    "fabric": "*"
  },
  "suggests": {
    "flamingo": "*"
  }
}
